<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= @title %></title>
    <link rel="stylesheet" href="/styles/main.css">
    <link href="favicon.ico?v=1.0" rel="icon" type="image/x-icon"/>
  </head>
  <body>
    <% if session[:message] %>
      <p class="message">
        <%= session.delete(:message) %>
      </p>
    <% end %>
    <%= yield %>
  </body>
</html>
