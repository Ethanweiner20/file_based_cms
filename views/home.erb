<ul>
  <% @files.each do |file|%>
    <li>
      <a href="/<%= file %>"><%= file %></a>
      <a href="/<%= file %>/edit">Edit</a>
      <form class="delete" action="/<%= file %>/delete" method="post">
        <button type="submit">Delete</button>
      </form>
    </li>
  <% end %>
</ul>
<a href="/new">New Document</a>
<% if session[:user] %>
  <form action="/users/signout" method="post">
    <p class="user-status">Signed in as <%= session[:user] %>.
      <button type="submit">Sign Out</button>
    </p>
  </form>
<% else %>
  <form action="/users/signin" method="get">
    <button type="submit">Sign In</button>
  </form>
<% end %>
